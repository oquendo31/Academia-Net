@page "/examManagements"


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Gestión de Exámenes</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        /* Contenedor principal */
        .content-container {
            margin-left: 250px; /* Espacio para el sidebar */
            margin-right: 50px; /* Margen derecho */
            max-width: 1100px; /* Controla el ancho máximo */
            padding: 20px;
            box-sizing: border-box;
        }

        h1 {
            font-size: 28px;
            color: #333;
            margin-bottom: 20px;
        }

        .button {
            background-color: #007bff;
            color: white;
            padding: 10px 15px;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .button:hover {
                background-color: #0056b3;
            }

        .card {
            background-color: white;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

            .card p {
                margin: 0;
                color: #555;
            }
    </style>
</head>
<body>

    <div class="content-container">
        <h1>Gestión de Exámenes</h1>
        <button class="button">Nuevo Examen</button>

        <div class="card">
            <p>📋 Esta página está en construcción. Estamos trabajando para traerte esta funcionalidad pronto.</p>
        </div>
    </div>

</body>
</html>



